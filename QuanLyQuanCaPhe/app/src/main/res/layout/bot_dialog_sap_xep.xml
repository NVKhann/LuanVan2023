<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mặc định"
            android:padding="15dp"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:textColor="@color/bg_color"
            android:id="@+id/sdTvMacDinh"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mới nhất"
            android:padding="15dp"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:textColor="@color/bg_color"
            android:id="@+id/sdTvMoiNhat"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cũ nhất"
            android:padding="15dp"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:textColor="@color/bg_color"
            android:id="@+id/sdTvCuNhat"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá trị cao đến thấp"
            android:padding="15dp"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:textColor="@color/bg_color"
            android:id="@+id/sdTvCaoThap"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá trị thấp đến cao"
            android:padding="15dp"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:textColor="@color/bg_color"
            android:id="@+id/sdTvThapCao"/>
    </LinearLayout>
</RelativeLayout>